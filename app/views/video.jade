extends layout
block meta
  meta(property='og:image' content='//img.youtube.com/vi/#{video.youtube_id}/sddefault.jpg')

block content

  div#main-wrapper
    div.container
      div.row
        div.12u.skel-cell-important
          div#content
            article.last
              iframe(width='100%' height='480' src='//www.youtube.com/embed/#{video.youtube_id}' frameborder='0' allowfullscreen)
              
              h2= video.title
              p= video.description

              div#disqus_thread
              script(type='text/javascript').
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                  var disqus_shortname = 'codecafetv'; // required: replace example with your forum shortname

                  /* * * DON'T EDIT BELOW THIS LINE * * */
                  (function() {
                      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                  })();               

              noscript
                | Please enable JavaScript to view the
                a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.

              a.dsq-brlink(href='http://disqus.com') comments powered by
                span.logo-disqus Disqus
              