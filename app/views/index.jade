extends layout

block content

  div#banner-wrapper
    div.container
      div.row
        div.12u
          div#banner.box
            div
              div.row
                div.7u
                  iframe(width="560" height="315" src="//www.youtube.com/embed/#{first.youtube_id}" frameborder="0" allowfullscreen)
                div.5u
                  h2
                    a(href='/video/#{first.slug}')= first.title

  div#features-wrapper
    div.container
      div.row
        ul.8u.skel-cell-important.row
          for video in videos
            li
              section.preview
                a.image.image-left(href='/video/#{video.slug}')
                  img(src='//img.youtube.com/vi/#{video.youtube_id}/sddefault.jpg' alt='')
                div.pull-right
                  header
                    h3= video.title
                    span.byline= video.description


        div.4u
          div#sidebar
            section
              a.twitter-timeline(href="https://twitter.com/search?q=codecafetv" data-widget-id="423235209438306304") Tweets about "codecafetv"
              script
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");


